  <%= f.label :description %>
  <br/>
  <%= f.text_field :description %>
  <br/>
  <br/>

  <%= f.label :location %>
  <br/>
  <%= f.text_field :location %>
  <br/>
  <br/>

  <%= f.label :date %>
  <br/>
  <%= f.text_field :date %>
  <br/>
  <br/>

  <%= f.label :note %>
  <br/>
  <%= f.text_field :note %>
  <br/>
  <br/>

  <%= f.submit %>

<% end %>
