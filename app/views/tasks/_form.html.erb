<%= form_for([@member, @task]) do |f| %>
  <p><%= @member.errors.full_messages.first if @task.errors.any? %></p>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :date %>
  <%= f.text_field :date %>

  <%= f.label :note %>
  <%= f.text_field :note %>

  <%= f.submit %>

<% end %>
